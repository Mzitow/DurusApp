<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="2dp"
    android:padding="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/white_rectangle_rounded_coners"
    android:layout_height="50dp">

    <ImageView
        android:src="@drawable/icon_ayah_indicator"
        android:id="@+id/iv_icon_bullet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_name"
        android:fontFamily="@font/sultan_light"
        android:textColor="@color/black"
        android:text="@string/categories"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_bullet"
        app:layout_constraintEnd_toStartOf="@+id/iv_icon_bullet"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_bullet" />

    <ImageView

        android:src="@drawable/icon_arrow_go"
        android:id="@+id/iv_go_to_category"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_category_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_category_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_category_name" />


</androidx.constraintlayout.widget.ConstraintLayout>